
<div class="page-mini-hero flex-end-center large-padding" style="background-image: url({collection.mainImage.assetUrl})">
    <h1>Architectural Portfolio</h1>
</div>
<div class="spacer"></div>
<squarespace:block-field id="projectText" columns="12" />
<!--TAGS-->
{.section tagFilter}
  <p class="filtered-by">Filtered by: {@|safe}</p>
{.end}
{.section collection}
<div style="margin-top: 10px">
{.repeated section tags}
      <span class="tag">{@}</span>
      {.end}
    {.end}
</div>
<div class="spacer"></div>
<!-- item loop -->
<div class="project-grid flex-start-start">
{.repeated section items}

<div class="project-grid-item flex-end-center hover" onclick="window.open('{fullUrl}', '_self')" style="background-image: url({assetUrl})">
<h3 class="grid-title" data-content-field="title">
      {title}
    </h3>
</div>

{.end}
</div>
